issn = {2053230X},
journal = {Acta Crystallographica Section F: Structural Biology Communications},
keywords = {DNA,DNA-binding proteins,IRF4,experimental phasing,interferon regulatory factor 4,native SAD,phosphorus},
pages = {202--207},
