issn = {2053230X},
journal = {Acta Crystallographica Section F: Structural Biology Communications},
keywords = {B4C,co-crystallization,crystallography,experimental phasing,lysozyme,tetrabromoterephthalic acid},
pages = {156--162},
pmid = {33949976},
publisher = {International Union of Crystallography},
title = {{Simplified heavy-Atom derivatization of protein structures via co-crystallization with the MAD tetragon tetrabromoterephthalic acid}},
